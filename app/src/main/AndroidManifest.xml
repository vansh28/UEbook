<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ue.uebook">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:exported="false"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_configure"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".HomeActivity.InerfaceLanguageScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebviewScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UploadBook.Upload_Book_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeatailActivity.Book_Detail_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PopularActivity.Popular_List_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SettingsActivity"

            android:theme="@style/AppTheme" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity.SplashScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".Twillo.SettingsActivity"
            android:parentActivityName=".Twillo.VideoActivity"></activity>
        <activity android:name=".Twillo.VideoActivity" />
        <activity android:name=".Help.HelpCenterScreen" />
        <activity android:name=".AboutUs.AboutusScreen" />
        <activity android:name=".Contactus.ContactusScreen" />
        <activity android:name=".ForgotPassWord.ForgotPasswordScreen" />
        <activity android:name=".NotepadScreen" />


        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Twillo.VideoActivity" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

    </application>

</manifest>