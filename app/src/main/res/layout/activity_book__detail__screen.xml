<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".DeatailActivity.Book_Detail_Screen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">
        <ImageButton
            android:id="@+id/back_btn_Deatils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_black"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_5"
            android:paddingLeft="@dimen/size_5">
        </ImageButton>
        <ImageButton
            android:id="@+id/bookmark_btn"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_12"
            android:layout_centerVertical="true"
            android:background="@drawable/bookmark_unactive"></ImageButton>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:visibility="visible"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        card_view:cardElevation="16dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_180"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        android:visibility="visible"
        android:layout_margin="6dp"
        app:cardMaxElevation="15dp">
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/size_5"
            android:scaleType="fitCenter"
            android:background="@drawable/images" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="The Good Son"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Author Name"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="@dimen/size_5"
        android:textColor="#696868"/>
</LinearLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:layout_marginTop="@dimen/size_15"
     android:background="#696868"></View>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_10"
    android:layout_marginTop="@dimen/size_5"
    android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Book Descriptioon"
                android:layout_margin="12dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/demoText"
        android:padding="@dimen/size_5"
        android:visibility="visible"
        android:paddingLeft="@dimen/size_10"
        android:layout_margin="@dimen/size_10"
        android:textColor="#3C3C3C"/>
    <Button
        android:id="@+id/readFull_Book_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/active_signin_border"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_18"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/size_18"
        android:textAllCaps="false"
        android:text="Read Full Book">

    </Button>


</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Share Stories On"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/fbshare_btn"
                        android:layout_width="wrap_content"
                        android:src="@drawable/fblogo"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/googleshare_btn"
                        android:layout_width="wrap_content"
                        android:src="@drawable/gplogo"
                        android:layout_marginLeft="@dimen/size_10"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content">
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/twittershare_btn"
                        android:layout_width="wrap_content"
                        android:src="@drawable/twlogo"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_height="wrap_content">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/whatsappshare_btn"
                        android:layout_width="wrap_content"
                        android:src="@drawable/whatsapp"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_height="wrap_content">
                    </ImageButton>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Rate This Book"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <RatingBar
                    android:id="@+id/myRatingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginLeft="6dp"
                    android:numStars="5"
                    android:rating="4"
                    android:theme="@style/RatingBar"
                    android:isIndicator="false" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_20"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="4.3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_25"
                            android:layout_height="wrap_content"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="/"
                            android:textSize="@dimen/size_20"
                            android:layout_height="wrap_content"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="5"
                            android:textSize="@dimen/size_20"
                            android:layout_height="wrap_content"></TextView>


                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Reviews"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_text_input"
                    style="@style/TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write your Comments"
                    android:layout_marginTop="@dimen/size_10"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_edit_text"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/size_60"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:layout_width="@dimen/size_150"
                    android:layout_marginLeft="@dimen/size_12"
                    android:text="SUBMIT"
                    android:padding="@dimen/size_10"
                    android:background="@drawable/submitbg"
                    android:textSize="@dimen/size_15"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/size_40">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Top Reviews"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/size_15"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
          <com.ue.uebook.NonScrollRecyclerView
              android:id="@+id/review_List"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/size_10"
              android:layout_height="match_parent">

          </com.ue.uebook.NonScrollRecyclerView>



        </LinearLayout>
    </ScrollView>
</LinearLayout>