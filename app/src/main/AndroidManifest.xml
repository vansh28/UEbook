<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ue.uebook">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".Quickblox_Chat.App"
        android:allowBackup="true"
        android:exported="false"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_configure"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".AuthorProfileActivity.AuthorEditProfile"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Dictionary.DictionaryScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".DeatailActivity.Book_Assignment"
            android:screenOrientation="portrait"/>
        <activity android:name=".AuthorProfileActivity.PendingRequestScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".Quickblox_Chat.utils.ui.activity.FriendListScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".AuthorProfileActivity.AuthorList"
            android:screenOrientation="portrait"/>
        <activity android:name=".AuthorProfileActivity.AuthorProfileScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomeActivity.InerfaceLanguageScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebviewScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UploadBook.Upload_Book_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeatailActivity.Book_Detail_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PopularActivity.Popular_List_Screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity.LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.SplashActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity.SplashScreen"
            android:configChanges="locale|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Help.HelpCenterScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutUs.AboutusScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Contactus.ContactusScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassWord.ForgotPasswordScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotepadScreen"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4b96a3f33893a42103eae91d2166d0c517b833d3" />

        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.LoginActivity"
            android:label="@string/login_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.SelectUsersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemenew" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.DialogsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemenew" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.ChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemenew"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.ChatInfoActivity"
            android:label="@string/chat_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.AttachmentImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemenew" />
        <activity
            android:name=".Quickblox_Chat.utils.ui.activity.AppInfoActivity"
            android:screenOrientation="portrait" />

        <service android:name=".Quickblox_Chat.utils.fcm.PushListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.quickblox.messages.services.fcm.QBFcmPushInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.quickblox.messages.TYPE"
            android:value="GCM" />
        <meta-data
            android:name="com.quickblox.messages.SENDER_ID"
            android:value="@string/sender_id" />
        <meta-data
            android:name="com.quickblox.messages.QB_ENVIRONMENT"
            android:value="DEVELOPMENT" />
    </application>

</manifest>