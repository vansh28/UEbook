<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_25"
        android:paddingStart="@dimen/size_25"
        android:paddingRight="@dimen/size_25"
        android:paddingEnd="@dimen/size_25"
        android:gravity="center|top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top">
            <ImageView
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_60"
                android:layout_marginTop="@dimen/size_20"
                android:src="@drawable/loginlogo"/>

            <ImageView
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/size_20"
                android:src="@drawable/payment_done"/>

            <com.ue.uebook.Customview.CustomTextViewNormal
                android:id="@+id/amount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid Amount "
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15"
                android:layout_marginTop="@dimen/size_20"
                android:visibility="visible"/>

            <com.ue.uebook.Customview.CustomTextViewNormal
                android:id="@+id/transaction_id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction ID 123456789"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"/>
            <com.ue.uebook.Customview.CustomTextViewNormal
                android:id="@+id/date_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:visibility="gone"/>
            <com.ue.uebook.Customview.CustomTextViewNormal
                android:id="@+id/msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you"
                android:gravity="center"
                android:textColor="@color/green"
                android:textSize="@dimen/size_15"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_20"/>
        </LinearLayout>

        <com.ue.uebook.Customview.CustomTextViewNormal
            android:id="@+id/print_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_25"
            android:text="View or print the sleep"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_20"
            android:textColor="@color/black"
            android:textSize="@dimen/size_15"
            android:elevation="@dimen/size_3"
            android:visibility="gone"
           />
        <Button
            android:id="@+id/finish_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/size_15"
            android:textColor="@color/red"
            android:textSize="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_20"
            />
        <!-- <customviews.CustomTextViewNormal
             android:layout_width="match_parent"
             android:layout_height="@dimen/_35sdp"
             android:text="Download ticket"
             android:gravity="center"
             android:layout_marginTop="@dimen/_15sdp"
             android:textColor="@color/blue"
             android:textSize="@dimen/_15sdp"/>-->

    </LinearLayout>
</ScrollView>