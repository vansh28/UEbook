<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_8"
        android:gravity="center_vertical"
        android:id="@+id/chatContainer"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_user"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:src="@drawable/user_default"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"/>
        <ImageView
            android:id="@+id/checkboxSelcted"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_marginLeft="@dimen/size_30"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size_30"
            android:src="@drawable/com_facebook_button_like_icon_selected"/>

        <ImageView
            android:id="@+id/activeUnactiveTv"
            android:layout_width="@dimen/size_10"
            android:background="@drawable/redcircle"
            android:layout_marginTop="@dimen/size_8"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/size_50"
            android:layout_height="@dimen/size_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_toRightOf="@+id/image_user"
            android:layout_marginTop="@dimen/size_5"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/userchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="#A7A7A7"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/size_5"/>
        <TextView
            android:id="@+id/unreadMszCounterTv"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:text="2"
            android:visibility="gone"
            android:layout_below="@id/timeTv"
            android:background="@drawable/chatcircle"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginTop="@dimen/size_5"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:visibility="gone"
        android:layout_marginTop="@dimen/size_8"
        android:background="#d3d3d3"/>
</LinearLayout>