<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatSdk.UserProfileChatScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:background="@android:color/transparent"
            android:padding="@dimen/size_10"
            android:src="@drawable/backbtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/size_200">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_user"
            android:layout_width="@dimen/size_120"
            android:layout_height="@dimen/size_120"
            android:src="@drawable/user_default"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_15"
            app:civ_border_color="#ffffff"/>
        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:src="@drawable/camera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:layout_height="wrap_content">
        </ImageView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_15"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/profileuser"
            android:id="@+id/logo"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/logo"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_height="wrap_content">
            <com.ue.uebook.Customview.CustomTextViewBold
                android:layout_width="wrap_content"
                android:text="Name"
                android:textSize="@dimen/size_18"
                android:layout_height="wrap_content"/>
            <com.ue.uebook.Customview.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:text="Vansh"
                android:id="@+id/userName"
                android:textSize="@dimen/size_17"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/pencil"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:id="@+id/nameEdit"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_16"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/size_1"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_15"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_info"
            android:id="@+id/urgentlogo"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/urgentlogo"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_height="wrap_content">
            <com.ue.uebook.Customview.CustomTextViewBold
                android:layout_width="wrap_content"
                android:text="About"
                android:textSize="@dimen/size_18"
                android:layout_height="wrap_content"/>
            <com.ue.uebook.Customview.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:text="urgent call only"
                android:textSize="@dimen/size_17"
                android:id="@+id/abouUser"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/pencil"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:id="@+id/editAbout"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_16"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/size_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_15"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/emailprofile"
            android:id="@+id/Emaillogo"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/Emaillogo"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_height="wrap_content">
            <com.ue.uebook.Customview.CustomTextViewBold
                android:layout_width="wrap_content"
                android:text="Email"
                android:textSize="@dimen/size_18"
                android:layout_height="wrap_content"/>
            <com.ue.uebook.Customview.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:text="vansh@gmail.com"
                android:textSize="@dimen/size_17"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/user"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/size_16"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/size_1"/>

</LinearLayout>