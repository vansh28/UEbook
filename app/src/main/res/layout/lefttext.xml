<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/oponentlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/size_150"
        android:background="@drawable/rounded_rect"
        android:visibility="gone">
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/oPonentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/size_40"
            android:minWidth="@dimen/size_80"
            android:padding="@dimen/size_5"
            app:emojiconSize="28sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="start"
            android:visibility="gone"
            android:textSize="@dimen/size_10"
            />
        <TextView
            android:id="@+id/oponentMessageTime"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oPonentMessage"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size_5"
            android:text="2:03 am"
            android:textColor="@color/black"
            android:textSize="@dimen/size_10"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/senderlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/size_150"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/size_15"
        android:background="@drawable/senderbg"
        android:visibility="gone">
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            android:text="Hello "
            android:paddingLeft="@dimen/size_5"
            android:gravity="center_vertical"
            android:minHeight="@dimen/size_40"
            android:minWidth="@dimen/size_70"
            app:emojiconSize="28sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/userMessageTime"
            android:layout_width="@dimen/size_50"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userMessage"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size_5"
            android:text="2:03 am"
            android:textColor="@color/black"
            android:textSize="@dimen/size_10"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/senderlayoutimage"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_150"
        android:layout_gravity="end"
        android:layout_marginLeft="@dimen/size_150"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/size_15"
        android:background="@drawable/border"
        android:baselineAligned="false"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progressbarsender"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageSender"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_150"
            android:layout_margin="@dimen/size_5" />
        <ImageButton
            android:id="@+id/playbtnsender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha=".6"
            android:src="@drawable/play"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/oponentlayoutimage"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_150"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/size_200"
        android:background="@drawable/border"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progressbarOpopnent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageoponent"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_5"
            android:layout_height="@dimen/size_150" />
        <ImageButton
            android:id="@+id/playbtnOponent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha=".6"
            android:src="@drawable/play"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/videoConainerOponet"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_100"
        android:visibility="gone">
        <ImageView
            android:id="@+id/videoviewOpoenent"
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_200" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_menu_upload_you_tube" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/videoConainersender"
        android:layout_width="@dimen/size_200"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone">
        <ImageView
            android:id="@+id/videoviewsender"
            android:layout_width="@dimen/size_200"
            android:layout_height="@dimen/size_200"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_menu_upload_you_tube"
            android:visibility="visible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fileviewoponent"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/rounded_rect"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/downloadfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:src="@android:drawable/stat_sys_download"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/fimage"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_toLeftOf="@+id/file"
            android:src="@drawable/filechat" />
        <TextView
            android:id="@+id/file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="File"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fileviewSender"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_60"
        android:layout_gravity="right"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/senderbg"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size_10"
            android:layout_toLeftOf="@+id/filesender"
            android:src="@drawable/filechat" />
        <TextView
            android:id="@+id/filesender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="File"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/audioviewoponent"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/rounded_rect"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/oponentButtonTestPlayPause"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:src="@drawable/play" />

        <SeekBar
            android:id="@+id/oponentSeekBarTestPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/oponentButtonTestPlayPause" />
        <ImageButton
            android:id="@+id/downloadaudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:src="@android:drawable/stat_sys_download"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/audio"
            android:src="@drawable/audiochat" />

        <TextView
            android:id="@+id/audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Audio"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/audioviewSender"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_50"
        android:layout_gravity="right"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/senderbg"
        android:visibility="gone">


        <ImageButton
            android:id="@+id/ButtonTestPlayPause"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/play" />

        <SeekBar
            android:id="@+id/SeekBarTestPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/ButtonTestPlayPause" />
        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/audiosender"
            android:src="@drawable/audiochat" />

        <TextView
            android:id="@+id/audiosender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="Audio"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/size_200"
        android:background="@drawable/bgcomment"
        android:padding="@dimen/size_10"
        android:layout_margin="@dimen/size_5"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/oponentCommentLAyout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/dark_gray"
            android:layout_height="@dimen/size_50">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Status"
                    android:textSize="@dimen/size_17"
                    android:textColor="@color/red"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Photo"
                    android:id="@+id/messageTypeOponent"
                    android:textSize="@dimen/size_17"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
                android:id="@+id/imageCommentOponent"
        android:background="@drawable/noimage"
        android:layout_height="match_parent"/>

        </LinearLayout>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:layout_width="wrap_content"
            android:id="@+id/commentMszOponent"
            android:textSize="@dimen/size_17"
            android:layout_margin="@dimen/size_10"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/size_200"
        android:background="@drawable/bgcomment"
        android:padding="@dimen/size_10"
        android:layout_margin="@dimen/size_5"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="right"
        android:id="@+id/SendertCommentLAyout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/dark_gray"
            android:layout_height="@dimen/size_50">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Status"

                    android:textSize="@dimen/size_17"
                    android:textColor="@color/red"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Photo"
                    android:id="@+id/messageTypeSender"
                    android:textSize="@dimen/size_17"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/imageCommentSender"
                android:background="@drawable/noimage"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:layout_width="wrap_content"
            android:id="@+id/commentMszSender"
            android:textSize="@dimen/size_17"
            android:layout_margin="@dimen/size_10"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>