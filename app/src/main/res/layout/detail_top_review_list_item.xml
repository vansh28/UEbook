<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_review"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:src="@drawable/imageprofile"
            app:civ_border_width="2dp"
            android:layout_centerInParent="true"
            app:civ_border_color="#ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reviewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Username"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/size_10"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <RatingBar
                android:id="@+id/review_RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginLeft="12dp"
                android:numStars="5"
                android:theme="@style/RatingBar"
                android:isIndicator="true" />

        </LinearLayout>
        <TextView
            android:id="@+id/review_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="06/06/2019"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/size_10"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/review_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="@dimen/size_5"
        android:visibility="visible"
        android:paddingLeft="@dimen/size_10"
        android:layout_margin="@dimen/size_10"
        android:textColor="#3C3C3C"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_1"
    android:background="#B9B7B7"/>
</LinearLayout>