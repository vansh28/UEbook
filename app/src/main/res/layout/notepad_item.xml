<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/shareNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_10"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notepadContainer"
        android:layout_marginRight="@dimen/size_50"
        android:orientation="vertical">
    <com.ue.uebook.Customview.CustomTextViewMedium
        android:id="@+id/notepadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="@dimen/size_10"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18"/>
    <com.ue.uebook.Customview.CustomTextViewNormal
        android:id="@+id/notepadTextdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_5"
        android:layout_marginTop="@dimen/size_5"
        android:textColor="@color/black"
        android:textSize="@dimen/size_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_15"
        android:layout_below="@id/notepadContainer"
        android:background="#888888"/>
</RelativeLayout>